<article class="{{post_class}}">

	<div class="post-header">
		<h1 class="post-title">{{title}}</h1>
		<p class="post-information">Last Updated: <time datetime="{{updated_at}}" id="postdate">{{date updated_at format="DD.MMM.YYYY"}}</time>
	</div>

	<div class="post-content clearfix">
		{{{content}}}
	</div>

</article>
